        },
        {
          "command": "editless.promoteDiscoveredAgent",
          "when": "view == editlessTree && viewItem == discovered-squad",
          "group": "inline"
        },
        {
          "command": "editless.hideAgent",
          "when": "view == editlessTree && viewItem == discovered-agent",
          "group": "inline"
        },
        {
          "command": "editless.hideAgent",
          "when": "view == editlessTree && viewItem == discovered-squad",
          "group": "inline"
        },
        {
          "command": "editless.closeTerminal",
          "when": "viewItem == terminal"
        },
        {
          "command": "editless.closeTerminal",
          "when": "viewItem == terminal",
          "group": "inline@99"
        },
        {
          "command": "editless.renameSession",
          "when": "viewItem == terminal"
        },
        {
          "command": "editless.clearSessionLabel",
          "when": "viewItem == terminal"
        },
        {
          "command": "editless.openInBrowser",
          "when": "viewItem == work-item",
          "group": "inline"
        },
        {
          "command": "editless.goToWorkItem",
