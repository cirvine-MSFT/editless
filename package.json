        {
          "command": "editless.launchFromWorkItem",
          "when": "viewItem == work-item",
          "group": "work-item@1"
        },
        {
          "command": "editless.openInBrowser",
          "when": "viewItem == pull-request",
          "group": "inline"
        },
        {
          "command": "editless.launchFromPR",
          "when": "viewItem == pull-request",
          "group": "pull-request@1"
        },
        {
          "command": "editless.goToPRInBrowser",
          "when": "viewItem == pull-request",
          "group": "pull-request@2"
        },
        {
          "command": "editless.relaunchSession",
          "when": "viewItem == orphanedSession",
          "group": "inline@1"
        },
        {
          "command": "editless.dismissOrphan",
          "when": "viewItem == orphanedSession",
          "group": "inline@2"
        },
        {
          "command": "editless.filterLevel",
          "when": "view == editlessWorkItems && viewItem =~ /^(ado|github)-(backend|org|project|repo)$/",
          "group": "inline@1"
        },
        {
          "command": "editless.filterLevel",
          "when": "view == editlessWorkItems && viewItem =~ /^(ado|github)-(backend|org|project|repo)$/",
          "group": "filter@1"
        },
        {
          "command": "editless.clearLevelFilter",
          "when": "view == editlessWorkItems && viewItem =~ /^(ado|github)-(backend|org|project|repo)$/",
          "group": "filter@2"
        },
        {
          "command": "editless.filterPRLevel",
          "when": "view == editlessPRs && viewItem =~ /^(ado|github)-pr-(backend|org|project|repo)$/",
          "group": "inline@1"
        },
        {
          "command": "editless.filterPRLevel",
          "when": "view == editlessPRs && viewItem =~ /^(ado|github)-pr-(backend|org|project|repo)$/",
